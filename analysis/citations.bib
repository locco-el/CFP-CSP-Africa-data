doi = {10.1108/17465261111131848},
issn = {1746-5265},
journal = {Baltic Journal of Management},
month = {jan},
number = {2},
pages = {263--291},
publisher = {Emerald Group Publishing Limited},
title = {{CSR in an emerging country: a content analysis of CSR reports of listed companies}},
