number = {April},
pages = {29--44},
publisher = {Elsevier},
title = {{Impact of business analytics and enterprise systems on managerial accounting}},
url = {http://dx.doi.org/10.1016/j.accinf.2017.03.003},
volume = {25},
year = {2017}
}
