issn = {17554268},
journal = {Journal of Strategy and Management},
keywords = {CSR,India,Institutional pressures,Institutional theory},
number = {2},
pages = {227--242},
title = {{Pressures of CSR in India: an institutional perspective}},
volume = {12},
year = {2019}
}
