journal = {Journal of Business Ethics},
keywords = {Corporate Social Responsibility (CSR),Institutional works,Nigeria,SMEs,Sub-Saharan Africa,Tanzania},
number = {2},
pages = {385--400},
title = {{Corporate Social Responsibility in SMEs: A Shift from Philanthropy to Institutional Works?}},
volume = {138},
year = {2016}
